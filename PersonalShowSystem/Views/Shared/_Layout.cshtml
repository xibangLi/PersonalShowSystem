<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://mb.mituo.cn/mui111/favicon.ico" rel="shortcut icon" type="image/x-icon">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=0,minimal-ui">
    <meta name="keywords" content="@ViewBag.Title">
    <meta name="description" content="@ViewBag.Title">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" style="min-height:70px;">
        <div class="navbar_bg"></div>
        <div class="container" style="margin-top:10px;">
            <div class="navbar-header">
                <!-- 隐藏的菜单（缩小之后才显示出来） -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("李喜邦-Benny", "Index", "Home", null, new { @class = "brand_name navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="float:right;">
                    <li>@Html.ActionLink("首页", "Index", "Home")</li>
                    <li>@Html.ActionLink("工作经历", "Experence", "Home")</li>
                    <li>@Html.ActionLink("教育经历", "Education", "Home")</li>
                    <li>@Html.ActionLink("个人生活", "Livelihood", "Home")</li>
                    <li>@Html.ActionLink("个人博客", "Wordpress", "Home")</li>
                    <li>@Html.ActionLink("社会评价", "Evaluation", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    @RenderBody()


    <hr /><hr />
    <footer>
        <p style="margin-top: 50px; text-align: center; ">&copy;  Copyright © 2014 - @DateTime.Now.Year Swiper中文网,粤ICP备15001020号, All Rights Reserved。</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
